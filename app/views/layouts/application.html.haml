:javascript
!!!

%html{:lang => "en",}
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Recipe Finder App"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = javascript_include_tag "jquery.js"
    = javascript_include_tag "bootstrap-transition.js"
    = javascript_include_tag "bootstrap-alert.js"
    = javascript_include_tag "bootstrap-modal.js"
    = javascript_include_tag "bootstrap-dropdown.js"
    = javascript_include_tag "bootstrap-scrollspy.js"
    = javascript_include_tag "bootstrap-tab.js"
    = javascript_include_tag "bootstrap-tooltip.js"
    = javascript_include_tag "bootstrap-popover.js"
    = javascript_include_tag "bootstrap-button.js"
    = javascript_include_tag "bootstrap-collapse.js"
    = javascript_include_tag "bootstrap-carousel.js"
    = javascript_include_tag "bootstrap-typeahead.js"
    = image_tag              "apple-touch-icon-144-precomposed.png", :size => "144x144"
    = image_tag              "apple-touch-icon-114-precomposed.png", :size => "114x114"
    = image_tag              "apple-touch-icon-72-precomposed.png", :size => "72x72"
    = image_tag              "apple-touch-icon-57-precomposed.png"
    = image_tag              "favicon.png"
    = stylesheet_link_tag    "application", :media => "all"
    = stylesheet_link_tag    "http://twitter.github.io/bootstrap/assets/css/bootstrap.css"
    = stylesheet_link_tag    "http://twitter.github.io/bootstrap/assets/css/bootstrap-responsive.css"
    = csrf_meta_tags
    = yield(:head)
 
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "http://"} Cookle
          .nav-collapse.collapse
            %ul.nav
              %li.active
                %a{:href => "http://"} Home
              %li
                %a{:href => "http://"} About
              %li
                %a{:href => "http://"} Contact
            %form.navbar-form.pull-right
              %input.span2{:placeholder => "Email", :type => "text"}/
              %input.span2{:placeholder => "Password", :type => "password"}/
              %button.btn{:type => "submit"} Sign in
              %button.btn{:type => "submit"} Register
      = yield
