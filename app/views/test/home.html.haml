%html{:lang => "en",}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Cookle
    %link{:href => "http://twitter.github.io/bootstrap/assets/css/bootstrap.css", :rel => "stylesheet"}/
    %link{:href => "http://twitter.github.io/bootstrap/assets/css/bootstrap-responsive.css", :rel => "stylesheet"}/
    :css 
      body { padding-top : 0px;} 
    %link{:href => "http://twitter.github.io/bootstrap/assets/ico/apple-touch-icon-144-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}/
    %link{:href => "http://twitter.github.io/bootstrap/assets/ico/apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}/
    %link{:href => "http://twitter.github.io/bootstrap/assets/ico/apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}/
    %link{:href => "http://twitter.github.io/bootstrap/assets/ico/apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}/
    %link{:href => "http://twitter.github.io/bootstrap/assets/ico/favicon.png", :rel => "shortcut icon"}/
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "http://"} Cookle
          .nav-collapse.collapse
            %ul.nav
              %li.active
                %a{:href => "http://"} Home
              %li
                %a{:href => "http://"} About
              %li
                %a{:href => "http://"} Contact
            %form.navbar-form.pull-right
              %input.span2{:placeholder => "Email", :type => "text"}/
              %input.span2{:placeholder => "Password", :type => "password"}/
              %button.btn{:type => "submit"} Sign in
              %button.btn{:type => "submit"} Register
   
      .row-fluid
        .span12
        .span12
        .span12
        .span12
        .span12
        .span6.offset4
          %img.img-rounded{:src => "http://createfunnylogo.com/logo/google/Cookle.jpg"}/
      .row-fluid
        .span12
        .span8.offset3
          = form_tag("/search", :method => "get") do
            //= label_tag(:search_box, "Find a Recipe!")
            = text_field_tag :search_box, nil, { placeholder:'Search for a recipe', class:'span7'}
            .row-fluid
              .span5.offset2
                .btn-toolbar
                  = submit_tag :"Cookle Search",class:'btn' 
                  %button.btn.btn-primary{:type => "button"} I'm feeling hungry
                 
              
                
  
